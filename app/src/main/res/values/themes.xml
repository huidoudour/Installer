<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Installer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 启用动态颜色（壁纸取色） -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        
        <!-- 适配系统栏 -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fitsSystemWindows">true</item>
        
        <!-- Material Design 3 组件样式 -->
        <item name="materialCardViewStyle">@style/Widget.Material3.CardView.Elevated</item>
        <item name="materialButtonStyle">@style/Widget.Material3.Button.ElevatedButton</item>
        <item name="switchStyle">@style/Widget.Material3.CompoundButton.MaterialSwitch</item>
    </style>

    <style name="Theme.Installer" parent="Base.Theme.Installer" />
</resources>