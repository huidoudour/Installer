<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#D8F5C5">

    <!-- 标题区域 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_top_text"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:textColor="#333333" />

    <!-- 状态显示卡片 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/status_area_text1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvShizukuStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/status_area_text2"
                android:textSize="14sp"
                android:padding="8dp"
                android:background="#ffeeee"
                android:textColor="#cc0000" />

            <TextView
                android:id="@+id/tvSelectedFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/status_area_text3"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:background="#f0f0f0" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 功能按钮区域 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/operator_area_text1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- 文件选择按钮 -->
            <Button
                android:id="@+id/btnSelectFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/operator_area_text2"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#2196F3"
                android:textColor="#000000" />

            <!-- 权限请求按钮 -->
            <Button
                android:id="@+id/btnRequestPermission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/operator_area_text3"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#4CAF50"
                android:textColor="#000000" />

            <!-- 安装按钮（默认禁用） -->
            <Button
                android:id="@+id/btnInstall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/operator_area_text4"
                android:textSize="16sp"
                android:enabled="false"
                android:backgroundTint="#9E9E9E"
                android:textColor="#ffffff" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 日志显示区域 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/log_area_text1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="16dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:background="#f8f8f8">

                <TextView
                    android:id="@+id/tvLog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/log_area_text2"
                    android:textSize="12sp"
                    android:textColor="#666666" />
            </ScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
