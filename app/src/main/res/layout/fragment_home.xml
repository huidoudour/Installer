<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Shizuku 状态卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:contentPadding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shizuku 状态"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:id="@+id/statusIndicator"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/ic_launcher_background" />

                    <TextView
                        android:id="@+id/tvShizukuStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="正在检查..."
                        android:textSize="14sp"
                        android:textColor="#666666" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnRequestPermission"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="授予 Shizuku 权限"
                    android:textSize="14sp"
                    android:backgroundTint="@color/teal_200"
                    android:textColor="@color/black" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 文件选择卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:contentPadding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="选择 APK"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvSelectedFile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="未选择文件"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:padding="12dp"
                    android:background="#F5F5F5"
                    android:layout_marginBottom="12dp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical" />

                <Button
                    android:id="@+id/btnSelectFile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="选择 APK 文件"
                    android:textSize="14sp"
                    android:backgroundTint="@color/purple_500"
                    android:textColor="@color/white" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 安装操作卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:contentPadding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="安装选项"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchReplaceExisting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="替换现有应用"
                    android:checked="true"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchGrantPermissions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="自动授予权限"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btnInstall"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="安装 APK"
                    android:textSize="16sp"
                    android:enabled="false"
                    android:backgroundTint="@color/teal_700"
                    android:textColor="@color/white" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>



    </LinearLayout>
</androidx.core.widget.NestedScrollView>