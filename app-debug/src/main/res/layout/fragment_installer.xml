<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.installer.InstallerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Shizuku 状态卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:contentPadding="20dp"
            style="@style/Widget.Material3.CardView.Elevated">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shizuku 状态"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:background="?attr/colorSurfaceVariant"
                    android:layout_marginBottom="16dp">

                    <View
                        android:id="@+id/statusIndicator"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/ic_launcher_background" />

                    <TextView
                        android:id="@+id/tvShizukuStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="正在检查..."
                        android:textSize="15sp"
                        android:textColor="?attr/colorOnSurfaceVariant" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRequestPermission"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="授予 Shizuku 权限"
                    android:textSize="15sp"
                    android:backgroundTint="@color/button_secondary"
                    app:cornerRadius="12dp"
                    app:icon="@android:drawable/ic_lock_idle_lock"
                    app:iconGravity="textStart"
                    style="@style/Widget.Material3.Button" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 文件选择卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:contentPadding="20dp"
            style="@style/Widget.Material3.CardView.Elevated">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="选择安装包"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="16dp" />

                <!-- 文件信息容器 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="?attr/colorSurfaceVariant"
                    android:layout_marginBottom="12dp">

                    <!-- 文件名 -->
                    <TextView
                        android:id="@+id/tvSelectedFile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="未选择文件"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical" />

                    <!-- 文件类型标签 -->
                    <TextView
                        android:id="@+id/tvFileType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="12sp"
                        android:textColor="?attr/colorPrimary"
                        android:background="?attr/colorPrimaryContainer"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        android:fontFamily="monospace" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSelectFile"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="选择安装包 (APK/XAPK/APKS)"
                    android:textSize="15sp"
                    android:backgroundTint="@color/button_primary"
                    app:cornerRadius="12dp"
                    app:icon="@android:drawable/ic_menu_upload"
                    app:iconGravity="textStart"
                    style="@style/Widget.Material3.Button" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 安装操作卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:contentPadding="20dp"
            style="@style/Widget.Material3.CardView.Elevated">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="安装选项"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchReplaceExisting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="替换现有应用"
                    android:textSize="15sp"
                    android:checked="true"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchGrantPermissions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="自动授予权限"
                    android:textSize="15sp"
                    android:padding="8dp"
                    android:layout_marginBottom="20dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnInstall"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="安装 APK"
                    android:textSize="16sp"
                    android:enabled="false"
                    android:backgroundTint="@color/button_install"
                    app:cornerRadius="12dp"
                    app:icon="@android:drawable/stat_sys_download_done"
                    app:iconGravity="textStart"
                    style="@style/Widget.Material3.Button" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>