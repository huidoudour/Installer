<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.shell.ShellFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 终端输出区域卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            style="@style/Widget.Material3.CardView.Elevated">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- 标题栏 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="?attr/colorSurfaceVariant"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="💻 Shell 终端"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />

                    <!-- Shizuku 状态指示器 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="?attr/colorPrimaryContainer"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp">

                        <View
                            android:id="@+id/shizukuIndicator"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginEnd="6dp"
                            android:background="@android:drawable/presence_offline" />

                        <TextView
                            android:id="@+id/tvShizukuStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Root"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary"
                            android:fontFamily="monospace" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 终端输出区域 -->
                <ScrollView
                    android:id="@+id/scrollViewOutput"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="16dp"
                    android:background="?attr/colorSurface"
                    android:scrollbars="vertical">

                    <TextView
                        android:id="@+id/tvTerminalOutput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$ 欢迎使用 Shell 终端\n"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurface"
                        android:fontFamily="monospace"
                        android:lineSpacingExtra="2dp" />
                </ScrollView>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 快捷命令按钮区域 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="1dp"
            style="@style/Widget.Material3.CardView.Filled">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnClearScreen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:text="清屏"
                    android:textSize="12sp"
                    app:icon="@android:drawable/ic_menu_delete"
                    app:iconSize="18dp"
                    app:iconGravity="start"
                    app:cornerRadius="8dp"
                    style="@style/Widget.Material3.Button.TonalButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCopyOutput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:text="复制"
                    android:textSize="12sp"
                    app:icon="@android:drawable/ic_menu_upload"
                    app:iconSize="18dp"
                    app:iconGravity="start"
                    app:cornerRadius="8dp"
                    style="@style/Widget.Material3.Button.TonalButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnQuickCommands"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="快捷"
                    android:textSize="12sp"
                    app:icon="@android:drawable/ic_menu_recent_history"
                    app:iconSize="18dp"
                    app:iconGravity="start"
                    app:cornerRadius="8dp"
                    style="@style/Widget.Material3.Button.TonalButton" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 命令输入区域 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            style="@style/Widget.Material3.CardView.Elevated">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">

                <!-- 命令输入框 -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:hint="输入命令..."
                    app:boxBackgroundMode="none"
                    app:hintTextColor="?attr/colorOnSurfaceVariant">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCommandInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textNoSuggestions|textMultiLine"
                        android:maxLines="3"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface"
                        android:fontFamily="monospace"
                        android:imeOptions="actionSend" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- 执行按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnExecuteCommand"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:icon="@android:drawable/ic_media_play"
                    app:iconSize="24dp"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:cornerRadius="12dp"
                    style="@style/Widget.Material3.Button.Icon" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>