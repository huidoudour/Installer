<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".ui.shell.ShellFragment">

    <!-- 沉浸式终端输出区域 -->
    <ScrollView
        android:id="@+id/scrollViewOutput"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/toolbarContainer"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:background="#000000">

        <TextView
            android:id="@+id/tvTerminalOutput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textSize="12sp"
            android:textColor="#00FF00"
            android:fontFamily="monospace"
            android:lineSpacingExtra="2dp"
            android:textIsSelectable="true" />
    </ScrollView>

    <!-- 工具栏容器 -->
    <LinearLayout
        android:id="@+id/toolbarContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/functionKeysContainer"
        android:orientation="vertical"
        android:background="#1A1A1A"
        android:padding="8dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 状态指示器 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/shizukuIndicator"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginEnd="6dp"
                    android:background="@android:drawable/presence_offline" />

                <TextView
                    android:id="@+id/tvShizukuStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="root"
                    android:textSize="11sp"
                    android:textColor="#00FF00"
                    android:fontFamily="monospace" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@termux"
                    android:textSize="11sp"
                    android:textColor="#808080"
                    android:fontFamily="monospace"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- 快捷按钮 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnClearScreen"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:padding="0dp"
                android:text="C"
                android:textSize="10sp"
                android:textColor="#00FF00"
                android:backgroundTint="#2A2A2A"
                android:layout_marginEnd="4dp"
                app:cornerRadius="4dp"
                style="@style/Widget.Material3.Button.TonalButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCopyOutput"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:padding="0dp"
                android:text="📋"
                android:textSize="10sp"
                android:backgroundTint="#2A2A2A"
                android:layout_marginEnd="4dp"
                app:cornerRadius="4dp"
                style="@style/Widget.Material3.Button.TonalButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnQuickCommands"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:padding="0dp"
                android:text="⚡"
                android:textSize="10sp"
                android:backgroundTint="#2A2A2A"
                app:cornerRadius="4dp"
                style="@style/Widget.Material3.Button.TonalButton" />
        </LinearLayout>
    </LinearLayout>

    <!-- 功能键容器 (Tab, 上下箭头等) -->
    <LinearLayout
        android:id="@+id/functionKeysContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/inputContainer"
        android:orientation="horizontal"
        android:background="#0D0D0D"
        android:padding="6dp"
        android:gravity="center">

        <!-- 上箭头 (历史上一条) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHistoryUp"
            android:layout_width="40dp"
            android:layout_height="32dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:padding="0dp"
            android:text="↑"
            android:textSize="16sp"
            android:textColor="#00FF00"
            android:backgroundTint="#1A1A1A"
            android:layout_marginEnd="4dp"
            app:cornerRadius="4dp"
            style="@style/Widget.Material3.Button.TonalButton" />

        <!-- 下箭头 (历史下一条) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHistoryDown"
            android:layout_width="40dp"
            android:layout_height="32dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:padding="0dp"
            android:text="↓"
            android:textSize="16sp"
            android:textColor="#00FF00"
            android:backgroundTint="#1A1A1A"
            android:layout_marginEnd="8dp"
            app:cornerRadius="4dp"
            style="@style/Widget.Material3.Button.TonalButton" />

        <!-- Tab键 (自动补全 - 暂时显示常用目录) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTab"
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:padding="0dp"
            android:text="TAB"
            android:textSize="10sp"
            android:textColor="#00FFFF"
            android:backgroundTint="#1A1A1A"
            android:layout_marginEnd="8dp"
            app:cornerRadius="4dp"
            style="@style/Widget.Material3.Button.TonalButton" />

        <!-- Ctrl+C (终止命令) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCtrlC"
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:padding="0dp"
            android:text="^C"
            android:textSize="11sp"
            android:textColor="#FF4444"
            android:backgroundTint="#1A1A1A"
            android:layout_marginEnd="4dp"
            app:cornerRadius="4dp"
            style="@style/Widget.Material3.Button.TonalButton" />

        <!-- ESC键 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEsc"
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:padding="0dp"
            android:text="ESC"
            android:textSize="10sp"
            android:textColor="#FFA500"
            android:backgroundTint="#1A1A1A"
            app:cornerRadius="4dp"
            style="@style/Widget.Material3.Button.TonalButton" />
    </LinearLayout>

    <!-- 命令输入区域 -->
    <LinearLayout
        android:id="@+id/inputContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#1A1A1A"
        android:padding="8dp"
        android:gravity="center_vertical">

        <!-- 命令提示符 -->
        <TextView
            android:id="@+id/tvPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:textSize="14sp"
            android:textColor="#00FF00"
            android:fontFamily="monospace"
            android:paddingEnd="8dp"
            android:paddingStart="4dp" />

        <!-- 命令输入框 -->
        <EditText
            android:id="@+id/etCommandInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textNoSuggestions"
            android:maxLines="1"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:fontFamily="monospace"
            android:background="@android:color/transparent"
            android:textCursorDrawable="@null"
            android:hint="command"
            android:textColorHint="#404040"
            android:imeOptions="actionSend|flagNoExtractUi"
            android:windowSoftInputMode="adjustResize" />
    </LinearLayout>

</RelativeLayout>